<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SkillMatch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SkillMatch" parent="Base.Theme.SkillMatch" />
    
    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:layout_height">56dp</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextInactive</item>
    </style>
    
    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavigationTextActive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="BottomNavigationTextInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
    </style>
</resources>